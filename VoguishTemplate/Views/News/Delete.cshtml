@model VoguishTemplate.Models.News
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete News</h2>

@using (Html.BeginForm("Delete", "News", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-sm-10">
            <input type="hidden" name="@Model.Id">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Title:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" placeholder="@Model.Title" name="@Model.Title">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="text">Text:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="text" placeholder="@Model.Text" name="@Model.Text">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="url">Url:</label>
        <div class="col-sm-10">
            <img style="width:100px; height:100px" src="~/Uploads/@Model.Filess.Name" >
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Delete</button>
        </div>
    </div>
}
